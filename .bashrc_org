#mount nas01 drives
function nasmount
{
   if (( $# == 1 )); then
       sudo mount -t cifs //${COGITO_NAS}/${1} ~/mnt/${1} -o username=`id -un`,uid=`id -un`,gid=`id -gn`;
   elif (( $# == 2 )); then
       sudo mount -t cifs //${COGITO_NAS}/${1} ~/mnt/${1} -o username=${2},uid=`id -un`,gid=`id -gn`;
   fi
}

